config samba
        option workgroup 'WORKGROUP'
        option description 'Samba4 on OpenWrt'
        option charset 'UTF-8'
        option homes '0'
        option macos '0'
        option name 'sirpdboy'

config sambashare
        option read_only 'no'
        option users 'root'
        option create_mask '0777'
        option dir_mask '0777'
        option force_root '1'
        option guest_ok 'yes'
        option inherit_owner 'yes'